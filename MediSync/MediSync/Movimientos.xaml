<Window x:Class="MediSync.Views.Movimientos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediSync.Views"
        mc:Ignorable="d"
        Title="Movimientos" Height="450" Width="800">
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Rastreo de movimientos" FontSize="18" Margin="10"/>
        <!-- Barra de Búsqueda y Botón Registrar Movimiento -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <!-- Campo de búsqueda -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Grid.Column="0" Height="35" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtBuscarMovimiento" Grid.Column="1" VerticalAlignment="Center"
                       BorderThickness="0" TextChanged="TxtBuscarMovimiento_TextChanged"/>
                </Grid>
            </Border>

            <!-- Botón para Registrar Movimiento -->
            <Button Content="Buscar" Width="180" Height="35"
              Grid.Column="1" HorizontalAlignment="Right"
              Background="#1A5276" Foreground="White" FontWeight="Bold"
              Click="BtnRegistrarMovimiento_Click"/>
        </Grid>

        <!-- Tabla de Movimientos -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness=".5" CornerRadius="5" Margin="10">
            <StackPanel>
                <TextBlock Text="Historial de Movimientos" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                <DataGrid x:Name="dgMovimientos" AutoGenerateColumns="False"
                    Margin="10" Height="300" SelectionMode="Single"
                    SelectionChanged="DgMovimientos_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="25"/>
                        <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="150"/>
                        <DataGridTextColumn Header="Generado" Binding="{Binding Generado}" Width="100"/>
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="70"/>
                        <DataGridTextColumn Header="Locacion" Binding="{Binding Locacion}" Width="150"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>

