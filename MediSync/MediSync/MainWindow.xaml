<Window
    x:Class="MediSync.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MediSync"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            x:Name="Dashboard"
            Width="150"
            HorizontalAlignment="Left"
            Background="#2E5A88">

            <!-- Espacio para el logo -->
            <Border Height="100" Background="#2E5A88" VerticalAlignment="Top">
                <TextBlock
                    Text="(Sin definir)"
                    Foreground="White"
                    FontSize="16"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontStyle="Italic" />
            </Border>

            <!-- Botones del menú con altura 40 y sin margen -->
            <Button
                x:Name="MovimientosButton"
                Height="40"
                Margin="0,0"
                Background="#2E5A88"
                Content="Movimientos"
                Foreground="AliceBlue"
                Click="MovimientosButton_Click"/>

            <Button
                x:Name="ProductosButton"
                Height="40"
                Margin="0,0"
                Background="#2E5A88"
                Content="Productos"
                Foreground="AliceBlue"
                Click="ProductosButton_Click"/>

            <Button
                x:Name="ProveedoresButton"
                Height="40"
                Margin="0,0"
                Background="#2E5A88"
                Content="Proveedores"
                Foreground="AliceBlue"
                Click="ProveedoresButton_Click"/>

            <Button
                x:Name="CategoriasButton"
                Height="40"
                Margin="0,0"
                Background="#2E5A88"
                Content="Categorías"
                Foreground="AliceBlue"
                Click="CategoriasButton_Click"/>

            <Button
                x:Name="RolesButton"
                Height="40"
                Margin="0,0"
                Background="#2E5A88"
                Content="Roles"
                Foreground="AliceBlue"
                Click="RolesButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
