<Window
    x:Class="MediSync.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MediSync"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            x:Name="Dashboard"
            Width="150"
            HorizontalAlignment="Left"
            Background="#2E5A88">
            <Button
                x:Name="MovimientosButton"
                Margin="0,100"
                Background="#2E5A88"
                Content="Movimientos"
                Foreground="AliceBlue" />
            <Button
                x:Name="ProductosButton"
                Margin="0,100"
                Background="#2E5A88"
                Content="Productos"
                Foreground="AliceBlue" />

        </StackPanel>

    </Grid>
</Window>
