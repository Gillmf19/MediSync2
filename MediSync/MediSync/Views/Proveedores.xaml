<Window x:Class="MediSync.Views.Proveedores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Proveedores" Height="650" Width="950"
        Background="#F0F4FF" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="8" Color="Gray" ShadowDepth="3"/>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Padding="15" Margin="15" 
            BorderBrush="#CBD5E1" BorderThickness="1" Effect="{DynamicResource DropShadow}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Título -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Botón Agregar -->
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Gestión de Proveedores"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#1E3A8A"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Tabla grande de proveedores -->
            <DataGrid x:Name="dgProveedores" Grid.Row="1" AutoGenerateColumns="False"
                      CanUserAddRows="False" Margin="0,5"
                      HeadersVisibility="Column"
                      Background="#FFFFFF" BorderBrush="#E5E7EB"
                      RowHeaderWidth="0"
                      FontSize="13" 
                      SelectionMode="Single" SelectionUnit="FullRow"
                      AlternatingRowBackground="#F1F5F9">

                <DataGrid.Columns>
                    <!-- Columna para ID -->
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="70" />

                    <!-- Otras columnas -->
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" />
                    <DataGridTextColumn Header="Contacto" Binding="{Binding Contacto}" Width="*" />
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="*" />
                    <DataGridTextColumn Header="Dirección" Binding="{Binding Direccion}" Width="*" />
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Botón Agregar -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Agregar Proveedor" Width="150" Height="40"
                        Background="#10B981" Foreground="White"
                        BorderBrush="#059669" FontSize="14" FontWeight="SemiBold"
                        Click="BtnAgregar_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
