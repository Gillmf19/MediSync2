<Window x:Class="MediSync.Views.Productos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediSync.Views"
        mc:Ignorable="d"
        Title="Productos" Height="450" Width="800">

    <Grid Background="White" Margin="160,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra superior con búsqueda y acciones -->
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Top">
            <!-- Búsqueda -->
            <Grid Width="300" Height="30">
                <TextBox x:Name="BuscarTextBox"
                         TextChanged="BuscarTextBox_TextChanged"
                         VerticalContentAlignment="Center"/>

            </Grid>

            <Button Content="🔍" Width="30" Height="30" Margin="5,0,10,0"/>

            <!-- Botones de acción -->
            <Button Content="Agregar" Width="80" Height="30" Margin="0,0,5,0" Background="#2E5A88" Foreground="White"/>
            <Button Content="Editar" Width="80" Height="30" Margin="0,0,5,0" Background="#2E5A88" Foreground="White"/>
            <Button Content="Eliminar" Width="80" Height="30" Background="#8B0000" Foreground="White"/>
        </StackPanel>

        <!-- Lista de productos -->
        <ListView x:Name="ProductosListView" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" Width="120"/>
                    <GridViewColumn Header="Código de Barra" DisplayMemberBinding="{Binding CodigoBarra}" Width="120"/>
                    <GridViewColumn Header="Unidad" DisplayMemberBinding="{Binding UnidadMedida}" Width="100"/>
                    <GridViewColumn Header="Peso" DisplayMemberBinding="{Binding Peso}" Width="80"/>
                    <GridViewColumn Header="Volumen" DisplayMemberBinding="{Binding Volumen}" Width="80"/>
                    <GridViewColumn Header="Caducidad" DisplayMemberBinding="{Binding FechaCaducidad}" Width="120"/>
                    <GridViewColumn Header="Categoría" DisplayMemberBinding="{Binding Categoria}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

