<Window x:Class="MediSync.Views.AgregarProveedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Proveedor" Height="607" Width="600"
        Background="#F0F4FF" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Background="White" CornerRadius="15" Padding="20" Margin="20" 
            BorderBrush="#3B82F6" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Registrar Nuevo Proveedor"
                       FontSize="20" FontWeight="Bold" Foreground="#1E3A8A"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Formulario de proveedor -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="10">
                <TextBlock Text="Nombre *" Margin="0,5" Foreground="#1D4ED8"/>
                <TextBox x:Name="txtNombre" Height="30" Background="#EFF6FF" BorderBrush="#60A5FA" TextChanged="txtNombre_TextChanged" />

                <TextBlock Text="Contacto" Margin="0,10 0 5" Foreground="#1D4ED8"/>
                <TextBox x:Name="txtContacto" Height="30" Background="#EFF6FF" BorderBrush="#60A5FA" TextChanged="txtContacto_TextChanged" />

                <TextBlock Text="Teléfono" Margin="0,10 0 5" Foreground="#1D4ED8"/>
                <TextBox x:Name="txtTelefono" Height="30" Background="#EFF6FF" BorderBrush="#60A5FA" TextChanged="txtTelefono_TextChanged" />

                <TextBlock Text="Dirección" Margin="0,10 0 5" Foreground="#1D4ED8"/>
                <TextBox x:Name="txtDireccion" Height="60" AcceptsReturn="True" TextWrapping="Wrap"
                         Background="#EFF6FF" BorderBrush="#60A5FA" TextChanged="txtDireccion_TextChanged"/>

                <TextBlock Text="Email" Margin="0,10 0 5" Foreground="#1D4ED8"/>
                <TextBox x:Name="txtEmail" Height="30" Background="#EFF6FF" BorderBrush="#60A5FA" TextChanged="txtEmail_TextChanged" />
            </StackPanel>

            <!-- Botones -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Guardar" Width="100" Height="35" Margin="10"
                        Background="#3B82F6" Foreground="White" BorderBrush="#2563EB"
                        FontWeight="Bold" Click="BtnGuardar_Click" Cursor="Hand" />

                <Button Content="Cancelar" Width="100" Height="35" Margin="10"
                        Background="#E0E7FF" Foreground="#1E40AF" BorderBrush="#93C5FD"
                        FontWeight="Bold" Click="BtnCancelar_Click" Cursor="Hand" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
